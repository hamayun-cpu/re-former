<%= form_for @user do |f| %>
  <%=f.label :username, 'UserName:'%>
  <%= f.text_field :username, placeholder: "Your username" %>
  <%=f.label :email, 'Email:'%>
  <%= f.email_field :email, placeholder: "email@gmail.com" %>
  <%=f.label :password, 'Password:'%>
  <%= f.password_field :password, placeholder: "your password" %>
  <%= f.submit %>
<% end %>
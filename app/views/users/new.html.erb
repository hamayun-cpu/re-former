<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |e| %>
      <%= e %><br>
    <% end %>
  <% end %> 
  <br>
  
  <%= f.label :username, 'Username:' %>
  <%= f.text_field :username, placeholder: "your new username" %><br /><br />
  <%= f.label :email, 'Email:' %> 
  <%= f.email_field :email, placeholder: "email@gmail.com" %><br /><br />
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password, placeholder: "password" %><br /><br />
  <%= f.submit 'Submit'%>
<% end %>
